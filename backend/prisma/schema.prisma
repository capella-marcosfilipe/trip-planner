generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trip {
  // Aqui descrevo as colunas
  id           String        @id @default(uuid())
  destination  String
  starts_at    DateTime
  ends_at      DateTime
  is_confirmed Boolean       @default(false)
  created_at   DateTime      @default(now())
  participants Participant[]

  // Aqui eu posso escrever o nome que eu quero que seja lá na minha tabela, mas a model tem que começar em maiúscula
  @@map("trips")
}

model Participant {
  id           String  @id @default(uuid())
  name         String?
  email        String
  is_confirmed Boolean @default(false)
  is_owner     Boolean @default(false)
  trip_id      String

  trip Trip @relation(fields: [trip_id], references: [id])

  @@map("participants")
}
